<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Getraenkeabrechner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tc_blau</item>
        <item name="colorPrimaryVariant">@color/tc_mittelblau</item>
        <item name="colorOnPrimary">@color/tc_weiss</item>
        <item name="colorPrimaryContainer">@color/tc_blau</item>
        <item name="colorOnPrimaryContainer">@color/tc_weiss</item>>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tc_weiss</item>
        <item name="colorSecondaryVariant">@color/tc_hellblau</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/tc_mittelblau</item>
        <item name="colorOnSecondaryContainer">@color/tc_blau</item>


        <item name="colorOutline">@color/gray</item>
        <item name="colorSurface">@color/tc_hellblau</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorAccent">@color/tc_blau</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_cancel</item>
        <item name="actionModeStyle">@style/Theme.Getraenkeabrechner.ActionMode</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.ActionBar</item>
    </style>

    <style name="Theme.Getraenkeabrechner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Getraenkeabrechner.NavigationView" parent="ThemeOverlay.Material3.NavigationView">
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="Theme.Getraenkeabrechner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>

    <style name="Theme.Getraenkeabrechner.SettingsToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/tc_weiss</item>
        <item name="android:textColorPrimary">@color/tc_blau</item>
    </style>

    <style name="Theme.Getraenkeabrechner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Getraenkeabrechner.Header" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/tc_blau</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">1000</item>
    </style>
    <style name="Theme.Getraenkeabrechner.Title" parent="TextAppearance.Material3.TitleMedium">

    </style>
    <style name="Theme.Getraenkeabrechner.BodyTextMedium" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Getraenkeabrechner.MemberIconText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Getraenkeabrechner.ItemSelectionButton" parent="Widget.Material3.Button">
        <item name="iconSize">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Theme.Getraenkeabrechner.FabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="colorAccent">@color/tc_mittelblau</item>
    </style>

    <style name="Theme.Getraenkeabrechner.ActionMode" parent="@style/Widget.Material3.ActionMode">
        <item name="height">76dp</item>
        <item name="titleTextStyle">@style/Theme.Getraenkeabrechner.Header</item>
    </style>

</resources>