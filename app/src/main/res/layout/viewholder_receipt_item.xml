<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_receipt_item_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/text_receipt_item_count"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="x" />

        <TextView
            android:id="@+id/text_receipt_item_name"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Getränk" />

        <TextView
            android:id="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@id/text_receipt_item_price"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="á"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_receipt_item_price"
            app:layout_constraintEnd_toStartOf="@id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="1,50€"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@id/text_receipt_item_price"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_receipt_item_total"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="1,50€"
            android:textAlignment="textEnd" />
</androidx.constraintlayout.widget.ConstraintLayout>