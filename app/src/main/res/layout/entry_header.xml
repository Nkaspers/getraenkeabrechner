<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:orientation="horizontal">

        <TextView
            android:id="@+id/text_lastentries_date_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Datum" />

        <TextView
            android:id="@+id/text_lastentries_name_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Name" />

        <TextView
            android:id="@+id/text_lastentries_item_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GetrÃ¤nk" />

        <TextView
            android:id="@+id/text_lastentries_price_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preis" />

        <TextView
            android:id="@+id/text_lastentries_anzahl_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anzahl" />

        <TextView
            android:id="@+id/text_lastentries_total_header"
            style="@style/Theme.Getraenkeabrechner.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gesamt" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>